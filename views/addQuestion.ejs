<% layout('layout') -%>

<div class='container'>
    <div class='row'>
        <div class='col-sm-6 col-md-4 col-md-offset-4'>
            <h1 class='text-center question-title'>Add Question</h1>
            <div class='account-wall'>
                <form class='form-addQuestion', action='/question/add', method='POST'>
                    <input type='text' name='text' class='form-control' placeholder='Question' required autofocus='true' />
                    <input type='text' name='answers[0]' class='form-control' placeholder='Correct Answer' required />
                    <input type='text' name='answers[1]' class='form-control' placeholder='Wrong Answer' required />
                    <input type='text' name='answers[2]' class='form-control' placeholder='Wrong Answer' />
                    <input type='text' name='answers[3]' class='form-control' placeholder='Wrong Answer' />
                    <button class='btn btn-lg btn-primary btn-block' type='submit'>Add Question</button>
                    <a href="/questionInventory" class="btn btn-danger btn-block">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
