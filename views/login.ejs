<% layout('layout') -%>

<div class='container'>
    <div class='row'>
        <div class='col-sm-6.col-md-4.col-md-offset-4'>
            <h1 class='text-center login-title'>Quiz Login</h1>
            <div class='account-wall'>
                <img 
                    class='profile-img'
                    src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120' />
                <form class='form-signin', action='/login', method='POST'>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type='text' name='username' class='form-control' placeholder='Email Address' required='true' autofocus='true' />
                    <input type='password' name='password' class='form-control' placeholder='Password' required='true' />
                    <button class='btn btn-lg btn-primary btn-block' type='submit'>Login</button>
                    <span class='clearfix' />
                </form>
                <a href='/register' class='text-center new-account'>Not already a member? Create a free account!</a>
                <% if (message) { %>
                    <h1 class='text-center error-message'><%=message %></h1>
                <% } %>
            </div>
        </div>
    </div>
</div>
