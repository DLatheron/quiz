<% layout('layout') -%>

<div class='container'>
    <div class='row'>
        <div class='col-sm-6 col-md-4 col-md-offset-4'>
            <h1 class='text-center login-title'>Please complete the following details to register:</h1>
            <div class='account-wall'>
                <form class='form-signin', action='/register', method='POST'>
                    <input type='text' name='username' class='form-control' placeholder='Email address' required='true' autofocus='true' />
                    <input type='password' name='password' class='form-control' placeholder='Password' required='true' />
                    <input type='password' name='confirm' class='form-control' placeholder='Re-type password' required='true' />
                    <button class='btn btn-lg btn-primary btn-block' type='submit'>Create Account</button>
                    <span class='clearfix' />
                </form>
                <a href='/' class='text-center new-account'>Already a member? Login here!</a>
                <% if (message) { %>
                    <h1 class='text-center error-message'><%=message %></h1>
                <% } %>
            </div>
        </div>
    </div>
</div>
